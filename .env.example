# =============================================================================
# F1-Slipstream Agent - Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your actual values
# Never commit .env files with real credentials to version control
# =============================================================================

# -----------------------------------------------------------------------------
# OpenAI Configuration (REQUIRED)
# -----------------------------------------------------------------------------
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# Model selection - Options: gpt-4-turbo, gpt-4, gpt-3.5-turbo
OPENAI_MODEL=gpt-4-turbo

# Embedding model - Options: text-embedding-3-small, text-embedding-3-large
OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# Temperature for response generation (0.0-2.0, default: 0.7)
OPENAI_TEMPERATURE=0.7

# Maximum tokens for responses (default: 2000)
OPENAI_MAX_TOKENS=2000

# -----------------------------------------------------------------------------
# Pinecone Configuration (REQUIRED)
# -----------------------------------------------------------------------------
# Get your API key from: https://app.pinecone.io/
PINECONE_API_KEY=your_pinecone_api_key_here

# Pinecone index name (must be created in Pinecone dashboard)
PINECONE_INDEX_NAME=f1-knowledge

# Pinecone environment (e.g., us-east-1-aws, gcp-starter)
PINECONE_ENVIRONMENT=us-east-1-aws

# Number of results to retrieve from vector store (default: 5)
PINECONE_TOP_K=5

# -----------------------------------------------------------------------------
# Tavily Search Configuration (REQUIRED)
# -----------------------------------------------------------------------------
# Get your API key from: https://tavily.com/
TAVILY_API_KEY=your_tavily_api_key_here

# Maximum search results to return (default: 5)
TAVILY_MAX_RESULTS=5

# Search depth - Options: basic, advanced (default: advanced)
TAVILY_SEARCH_DEPTH=advanced

# Include raw content in search results (default: true)
TAVILY_INCLUDE_RAW_CONTENT=true

# -----------------------------------------------------------------------------
# LangSmith Configuration (OPTIONAL - for tracing and monitoring)
# -----------------------------------------------------------------------------
# Get your API key from: https://smith.langchain.com/
LANGSMITH_API_KEY=your_langsmith_api_key_here

# Enable/disable tracing (default: false)
LANGSMITH_TRACING=false

# LangSmith endpoint
LANGSMITH_ENDPOINT=https://api.smith.langchain.com

# Project name for organizing traces
LANGSMITH_PROJECT=f1-slipstream-agent

# -----------------------------------------------------------------------------
# Application Configuration
# -----------------------------------------------------------------------------
# Application name
APP_NAME=f1-slipstream-agent

# Environment: development, staging, production
ENVIRONMENT=development

# Logging level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Maximum conversation history to maintain (default: 10)
MAX_CONVERSATION_HISTORY=10

# Session timeout in seconds (default: 3600 = 1 hour)
SESSION_TIMEOUT=3600

# -----------------------------------------------------------------------------
# API Configuration (FastAPI)
# -----------------------------------------------------------------------------
# API host (0.0.0.0 for Docker, 127.0.0.1 for local)
API_HOST=0.0.0.0

# API port
API_PORT=8000

# Enable auto-reload for development (default: true)
API_RELOAD=true

# Number of worker processes (production only, default: 4)
API_WORKERS=4

# CORS allowed origins (comma-separated, * for all)
API_CORS_ORIGINS=*

# API rate limiting (requests per minute, default: 60)
API_RATE_LIMIT=60

# -----------------------------------------------------------------------------
# UI Configuration (Streamlit)
# -----------------------------------------------------------------------------
# UI port
UI_PORT=8501

# API base URL for UI to connect to backend
API_BASE_URL=http://localhost:8000

# Enable Streamlit server headless mode (default: true for Docker)
STREAMLIT_HEADLESS=true

# -----------------------------------------------------------------------------
# Cache Configuration (OPTIONAL)
# -----------------------------------------------------------------------------
# Enable caching (default: true)
CACHE_ENABLED=true

# Cache TTL in seconds (default: 3600 = 1 hour)
CACHE_TTL=3600

# Cache backend: memory, redis (default: memory)
CACHE_BACKEND=memory

# Redis URL (if using Redis cache)
# REDIS_URL=redis://localhost:6379/0

# -----------------------------------------------------------------------------
# Retry and Timeout Configuration
# -----------------------------------------------------------------------------
# Maximum retry attempts for API calls (default: 3)
MAX_RETRIES=3

# Retry backoff multiplier (default: 2)
RETRY_BACKOFF_MULTIPLIER=2

# API timeout in seconds (default: 30)
API_TIMEOUT=30

# -----------------------------------------------------------------------------
# Security Configuration
# -----------------------------------------------------------------------------
# Secret key for session management (generate with: openssl rand -hex 32)
SECRET_KEY=your_secret_key_here

# Enable API authentication (default: false for development)
API_AUTH_ENABLED=false

# API key for authentication (if enabled)
# API_KEY=your_api_key_here

# Enable rate limiting (default: true)
ENABLE_RATE_LIMITING=true

# Rate limit per minute per client (default: 60)
RATE_LIMIT_PER_MINUTE=60

# Rate limit per hour per client (default: 1000)
RATE_LIMIT_PER_HOUR=1000

# Enable input validation and sanitization (default: true)
ENABLE_INPUT_VALIDATION=true

# Use strict input validation (default: false)
STRICT_INPUT_VALIDATION=false

# Maximum query length in characters (default: 2000)
MAX_QUERY_LENGTH=2000

# Enable CORS (default: true)
ENABLE_CORS=true

# CORS allowed origins (comma-separated list)
CORS_ALLOW_ORIGINS=http://localhost:3000,http://localhost:8501,http://localhost:8000

# Require API key for all endpoints (default: false)
REQUIRE_API_KEY=false

# API key header name (default: X-API-Key)
API_KEY_HEADER_NAME=X-API-Key

# Request signing secret (for sensitive operations)
# REQUEST_SIGNING_SECRET=your_signing_secret_here

# -----------------------------------------------------------------------------
# Data Ingestion Configuration
# -----------------------------------------------------------------------------
# Batch size for document ingestion (default: 100)
INGESTION_BATCH_SIZE=100

# Chunk size for document splitting (default: 1000)
CHUNK_SIZE=1000

# Chunk overlap for document splitting (default: 200)
CHUNK_OVERLAP=200

# -----------------------------------------------------------------------------
# Monitoring and Observability (OPTIONAL)
# -----------------------------------------------------------------------------
# Enable metrics collection (default: false)
METRICS_ENABLED=false

# Metrics port (Prometheus format)
METRICS_PORT=9090

# Enable performance profiling (default: false)
PROFILING_ENABLED=false
